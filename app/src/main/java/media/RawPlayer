import android.content.Context;
import android.media.MediaPlayer;
import android.provider.MediaStore;
public class RawPlayer {

    MediaPlayer mp=new MediaPlayer();
    private static RawPlayer instance;

    private static RawPlayer getInstance() {
        if(instance == null) {
            instance = new RawPlayer();
        }
        return instance;
    }

    public static void play(Context ctx ,int filename){
        getInstance().playMusic(ctx,filename);
    }
    public  void playMusic(Context ctx ,int filename) {
        try {

            try {
                if (mp.isPlaying()) {
                    mp.stop();
                    mp.release();
                }
                mp = MediaPlayer.create(ctx, filename);
                mp.start();
            } catch (Exception e) {
                e.printStackTrace();
                e.printStackTrace();
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
    public static void stop(){
        getInstance().stopMusic();
    }
    public  void stopMusic() {
        try {
            if(mp.isPlaying()){
                mp.stop();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
